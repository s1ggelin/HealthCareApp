@page
@model HealthCareWebb.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Inloggning</h2>

<form method="post">
    <div class="mb-3">
        
        <input asp-for="Username" class="input" placeholder="Användarnamn" />
    </div>
    <div class="mb-3">
        <input asp-for="Password" type="password" class="input" placeholder="Lösenord" />
    </div>
    <button type="submit" class="login-button">Logga in</button>
</form>


@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p style="color:red;">@Model.ErrorMessage</p>
}
